---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SITE_IMAGE } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image={SITE_IMAGE} />
	</head>

	<body>
		<Header />

		<main>
			<h1 class="hidden">Stephen Murdoch</h1>

			<p class="bio">{SITE_DESCRIPTION}</p>

			<div class="posts">
				{
					posts.map((post) => (
						<article>
							<a href={`/blog/${post.slug}/`}>
								<figure class="figure">
									<img width={620} height={338} src={post.data.heroImage} alt={post.data.heroAlt} />
								</figure>

								<h2>{post.data.title}</h2>
								<p>{post.data.description}</p>
							</a>
						</article>
					))
				}
			</div>
		</main>

		<Footer />
	</body>
</html>